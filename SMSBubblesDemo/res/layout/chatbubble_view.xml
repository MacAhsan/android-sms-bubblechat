<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chathead_linearlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.vodre.controls.CircularImageView
        android:id="@+id/chathead_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/homer"
        android:layout_marginRight="10dp"
        android:layout_margin="0dp" />

    <LinearLayout
        android:id="@+id/layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_margin="0dp"
        android:layout_marginLeft="9dp"
        android:layout_weight="1"
        android:background="#DF0101"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/contactName_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Persona:" />

        <TextView
            android:id="@+id/text_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:text="@string/bubble_text"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>